{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@grovine/backend",
  "type": "module",
  "scripts": {
    "start": "tsx ./scripts/dev.ts",
    "dev": "tsx watch ./scripts/dev.ts",
    "build": "tsc && tsx ./scripts/build.ts",
    "test": "bun test --bail --timeout 20000 ./tests/integration/*.ts",
    "deploy": "vercel deploy --prebuilt --token $VERCEL_TOKEN",
    "db:migration": "tsx ./scripts/migrate.ts"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "dependencies": {
    "@grovine/api": "workspace:^",
    "@grovine/backend": "workspace:^",
    "@grovine/media-server": "workspace:^",
    "@hono/node-server": "^1.14.2",
    "date-fns": "^4.1.0",
    "hono": "^4.7.10",
    "jose": "^6.0.11",
    "jsx-email": "^2.7.2",
    "kysely": "^0.28.2",
    "kysely-plugin-prefix": "^1.2.2",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.0",
    "react": "^19.1.0",
    "tslog": "^4.9.3"
  },
  "devDependencies": {
    "@effect/cli": "^0.61.4",
    "@effect/platform": "^0.82.4",
    "@effect/platform-node": "^0.81.1",
    "@faker-js/faker": "^9.8.0",
    "@types/date-fns": "^2.6.3",
    "@types/node": "^20.11.17",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.2",
    "@types/react": "^18.3.20",
    "effect": "^3.15.2",
    "kysely-ctl": "^0.13.1",
    "kysely-migration-cli": "^0.4.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
